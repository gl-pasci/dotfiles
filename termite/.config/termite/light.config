[options]
allow_bold				    = true
audible_bell			    = true
clickable_url			    = true
dynamic_title			    = false
font					        = Iosevka 10
fullscreen				    = false
mouse_autohide			  = false
scroll_on_output		  = false
scroll_on_keystroke   = true
scrollback_lines		  = -1
urgent_on_bell 			  = true
hyperlinks				    = true

browser					      = xdg-open
cursor_blink			    = system
cursor_shape			    = block
filter_unmatched_urls	= true
modify_other_keys		  = false
size_hints				    = false
scrollbar				      = off

